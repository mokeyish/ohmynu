#!/bin/sh

add_to_path_if_missing() {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            export PATH="$1:$PATH"
            ;;
    esac
}

add_to_path_if_missing "/usr/local/bin"

if [ -d "$HOME/.local/bin" ]; then
    add_to_path_if_missing "$HOME/.local/bin"
fi

add_to_path_if_missing "$HOME/.ohmynu/bin"
